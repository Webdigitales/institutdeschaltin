{# Extends matrix variables #}
{% extends '_components/_matrix/global-matrix-variables.twig' %}

{# Matrix content #}
{% block matrixContent %}
	{% set order = matrix.imagePosition %}
	<section class="section section-text-image">
		<div class="grid grid--col-2">
			<div class="col-span-1{% if order is same as(true) %} lg:order-2{% endif %}">
				<div class="section__picture">
					{% include '_components/image-portrait.twig' with {'entity': matrix} %}
				</div>
			</div>
			<div class="col-span-1 lg:px-4 flex flex-col justify-center">
				<div class="section__content">
					{% include '_components/heading.twig' with {'entity': matrix, 'headingLevel': '2'} %}
					{% include '_components/text.twig' with {'entity': matrix} %}
					{% include '_components/button.twig' with {'entity': matrix} %}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
