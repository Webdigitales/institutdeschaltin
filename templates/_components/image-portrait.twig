{# -- Image template -- #}

{#
	Set entity value when you include it like :
	{% include '_components/image-portrait.twig' with {'entity': entry} %}
#}

{% if entity.image|length %}
	{% set image = entity.image.one().imageOptimizedPortrait %}
	<picture class="picture">
		<source data-srcset="{{ image.srcsetWebP() }}"
						data-sizes="100vw"
						type="image/webp" />
		<img class="lazyload img"
				 src="{{ image.placeholderBox() }}"
				 data-srcset="{{ image.srcset() }}"
				 data-sizes="100vw" />
	</picture>
{% endif %}
